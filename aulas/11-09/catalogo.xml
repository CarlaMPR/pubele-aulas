  <title xml:lang="pt">Guia de Inquérito Musical Popular</title>
  <author>Michel Giacometti</author>
  <version>1975</version>
  <author email="dmorais@ip.pt" role="digitalização"> Domingos Morais</author>
  <entrado>1999:07</entrado>
